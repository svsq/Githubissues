<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dark_grey</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorPrimary">@color/dark_grey</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style name="DividerCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:background">@color/grey_semi_light</item>
    </style>

</resources>
