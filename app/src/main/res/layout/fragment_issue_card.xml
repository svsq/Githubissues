<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/ivIssue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_white_oval"
                android:padding="@dimen/default_half_margin"
                android:src="@drawable/ic_check"
                tools:ignore="ContentDescription" />

        <TextView
                android:id="@+id/tvIssueNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="issue_1" />

    </LinearLayout>

    <TextView
            android:id="@+id/tvIssueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title" />

    <TextView
            android:id="@+id/tvIssueStatusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey_semi_dark"
            android:drawableEnd="@drawable/ic_check"
            android:padding="@dimen/default_margin"
            android:text="To Do" />

    <TextView
            android:id="@+id/tvIssueBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text body" />

    <View style="@style/DividerCommon" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="тип задачи" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/ivIssueType"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_white_oval"
                android:padding="@dimen/default_half_margin"
                android:src="@drawable/ic_check"
                tools:ignore="ContentDescription" />

        <TextView
                android:id="@+id/tvIssueType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Баг" />

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Исполнитель" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_white_oval"
                android:padding="@dimen/default_half_margin"
                android:src="@drawable/ic_person"
                tools:ignore="ContentDescription" />

        <TextView
                android:id="@+id/tvExecutorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя и Фамилия" />

    </LinearLayout>

</LinearLayout>